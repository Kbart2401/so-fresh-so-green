
doctype html
html
  head
      block head
        title="SFSG"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        link(href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@600&display=swap" rel="stylesheet")
        link(rel='stylesheet' href='/stylesheets/user-logged-in.css')
        link(rel="stylesheet" href="/stylesheets/searchbar.css")
        link(rel="stylesheet" href="/stylesheets/dropdown.css")
        script(src="/javascripts/index.js" type="module" defer)
  body
    div(href="/" class="navbar") 
        div(class="logo")  
        div(class="wrap")
          div(class="search")
            //- form(method="POST" action="/")
            input(type="text" class="searchTerm" placeholder="Looking for Something?")
            button(type="submit" class="searchButton")
              i(class="fa fa-search")
        div(class="categoryfam")
            a(href="/locals" class="category") Local
            a(href="/topics" class="category") Topics
            a(href="/markets" class="category") Markets
            a(href="/farmers" class="category") Farmers
        div(class="dropdown")
            button(class="dropbtn") ...
            div(class="dropdown-content")
                a(href="#") whatever
                a(href="#") we 
                a(href="#") want :)
        div(class="navbuttonfam")
          if !user
            a(href="/users/login" class="navbutton") Login
            a(href="/users/" class="navbutton") Sign Up
          if user
            div.welcome-sign #{user.name}
            div.welcomeDiv
              .nav-links.hidden
                ul
                  - const url = `/users/${user.id}/settings`
                  li: a(href="/") PROFILE
                  li: a(href=url) SETTINGS
                  li: a(href="/users/logout") LOG OUT
block content

