
doctype html
html
  head
      block head
        title="SFSG"
        meta(charset="UTF-8")
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        link(href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@600&display=swap" rel="stylesheet")
        link(rel='stylesheet' href='/stylesheets/user-logged-in.css')
        link(rel="stylesheet" href="/stylesheets/searchbar.css")
        link(rel="stylesheet" href="/stylesheets/dropdown.css")
        link(rel="stylesheet" href="/stylesheets/profile.css")
        link(rel="stylesheet" href="/stylesheets/form.css")
        link(rel="stylesheet" href="/stylesheets/card.css")
        link(rel="stylesheet" href="/stylesheets/farm-feed.css")
        link(rel="stylesheet" href="/stylesheets/contact.css")
        link(rel="stylesheet" href="/stylesheets/faq.css")
        script(src="/javascripts/index.js" type="module" defer)
  body
    div(href="/" class="navbar")
        a(href="/")
          div(class="logo")
        div(class="wrap")
          div(class="search")
            form(class="search" method="GET" action="/search")
              input(type="text" name="search" class="searchTerm" placeholder="Looking for Something?")
              button(type="submit" class="searchButton")
              i(class="fa fa-search")
        div(class="dropdown")
            button(class="dropbtn")
              div(class="dropdown-content" class="navDrop")
                  a(href="/localfarms" class="category") Farms
                  a(href="/faq" class="category") FAQ
                  a(href="/contact" class="category") The Team
        div(class="navbuttonfam")
          if !user
            div(class="loginButtons")
                a(href="/users/login" class="navbutton") Login
                a(href="/users/" class="navbutton") Sign Up
          if user
            div.welcome-sign #{user.name}
            a(href="/posts" class="formbutton" class="createButton") POST
            .welcomeDiv.dropdown
              img(src= user.imageUrl class="welcomeImg" alt="profile picture")
              div.dropdown-content.profDrop
                - const settingsUrl = `/users/${user.id}/settings`
                - const profileUrl = `/users/${user.id}/profile`
                a(href=profileUrl class="category") PROFILE
                a(href=settingsUrl class="category")  SETTINGS
                a(href="/users/logout" class="category") LOG OUT
block content
