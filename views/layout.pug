doctype html
html
  head
      block head
        title="SFSG"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        link(href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@600&display=swap" rel="stylesheet")
        link(rel='stylesheet' href='/stylesheets/user-logged-in.css')
        script(src="/javascripts/index.js" type="module" defer)
  body
    div(class="navbar") 
      div(class="")
      div(class="logo") 
      div(class="searchBar") 
        form(method="POST" action="/")

        input(type="search" placeholder="search")
      div(class="categoryfam")
        a(href="/locals" class="category1") Local
        a(href="/topics" class="category2") Topics
        a(href="/markets" class="category3") Markets
        a(href="/farmers" class="category2") Farmers
        a(href="/etc" class="category3") ...
      div(class="navbuttonfam")
       if !user
        a(href="/users/login" class="navbutton") Login
        a(href="/users/" class="navbutton") Sign Up
       if user
        div.welcome-sign #{user.name}
        div.welcomeDiv
          .nav-links.hidden
            ul
              - const url = `/users/${user.id}/settings`
              li: a(href="/") PROFILE
              li: a(href=url) SETTINGS
              li: a(href="/users/logout") LOG OUT
block content
        
    
