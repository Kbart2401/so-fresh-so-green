doctype html
html
  head
      block head
        title="SFSG"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        
  body
    div(class="navbar") Navbar
      div(class="logo") Logo
      div(class="searchBar") Search Bar
      h1 So-Fresh-So-Green
      if user
        a(href="/users/logout" class="button") Log Out
      else
        a(href="/users/login" class="button") Login
        a(href="/users/" class="button") Sign Up
    if user
      div(class="welcomeDiv")= `Welcome ${user.name}`
    block content
