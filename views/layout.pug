doctype html
html
  head
      block head
        title="SFSG"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        link(href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@600&display=swap" rel="stylesheet")
        link(rel="stylesheet" href="/stylesheets/searchbar.css")
  body
    div(class="navbar") 
        div(class="")
        div(class="logo") 
        div(class="wrap")
        div(class="search") 
            input(for="searchbar" type="text" placeholder="Search..." class="searchTerm")
            button(type="submit" class="searchButton" id="searchbar")
                i(class="fa fa-search")
        div(class="categoryfam")
            a(href="/locals" class="category1") Local
            a(href="/topics" class="category2") Topics
            a(href="/markets" class="category3") Markets
            a(href="/farmers" class="category2") Farmers
            a(href="/etc" class="category3") ...
        div(class="navbuttonfam")
            a(href="/users/login" class="navbutton") Login
            a(href="/users/" class="navbutton") Sign Up
            a(href="/users/logout" class="navbutton") Log Out
    if user
      div(class="welcomeDiv")= `Welcome ${user.name}`
    block content

