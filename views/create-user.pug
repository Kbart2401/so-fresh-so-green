extends layout.pug


include utils.pug
block content
    if errors 
        div(class="error-container" id="error-container")
            div(id="exit") x
            div(class="errorlist")
                ul(class="list")
                    each error in errors
                        li= error
    div(class="form-container")
        div(class="form-title")= title
        form(class="login" action="/users" method="POST" class="sign-up")
            input(type="hidden" name="_csrf" value=csrfToken)
            +field("Name", "name", "text", name)
            +field("City", "city", "text", city)
            +field("Email", "email", "email", email)
            +field('Password', 'password', 'password')
            +field('Confirm Password', 'confirm-password', 'password')
            label(for="bio" class="label") Avatar
            select(name="imageUrl" class="theme-construction")
                option(value="/images/farmer-avatar.jpg") Male Farmer
                option(value="/images/farmer-avatar-female.jpg") Female Farmer
            div(class="formlogin")
                label(for="bio" class="label") Biography
                label(for="bio")
                textarea(class="formField" class="bioField" type="text" name="bio" id="bio" value=bio placeholder="Biography") #{bio}
            div(class="submit")
                button(type="submit" class="button" class="submitButton") Submit
            div(class="formButtons")
                a(href="/users/login" class="button") Login
                a(href="/" class="button") Cancel
